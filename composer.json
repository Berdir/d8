{
    "name": "drupal/drupal",
    "description": "Drupal is an open source content management platform powering millions of websites and applications.",
    "type": "project",
    "license": "GPL-2.0+",
    "require": {
        "composer/installers": "^1.0.21",
        "wikimedia/composer-merge-plugin": "~1.3"
    },
    "replace": {
        "drupal/core": "~8.0",
        "drupal/address": "8.*",
        "drupal/commerce": "8.*",
        "drupal/currency": "8.*",
        "drupal/default_content": "8.*",
        "drupal/webprofiler": "8.*",
        "drupal/drupalmoduleupgrader": "8.*",
        "drupal/inmail_cfortune": "8.*",
        "drupal/inmail_phpmailerbmh": "8.*",
        "drupal/pathauto": "8.*",
        "drupal/payment": "8.*",
        "drupal/plugin": "8.*",
        "drupal/plugin_selector": "8.*",
        "drupal/search_api_solr": "8.*",
        "drupal/swiftmailer": "8.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "autoloader-suffix": "Drupal8"
    },
    "extra": {
        "_readme": [
            "By default Drupal loads the autoloader from ./vendor/autoload.php.",
            "To change the autoloader you can edit ./autoload.php."
        ],
        "merge-plugin": {
            "include": [
                "core/composer.json",
                "modules/address/composer.json",
                "modules/commerce/composer.json",
                "modules/currency/composer.json",
                "modules/default_content/composer.json",
                "modules/devel/webprofiler/composer.json",
                "modules/drupalmoduleupgrader/composer.json",
                "modules/inmail/inmail_cfortune/composer.json",
                "modules/inmail/inmail_phpmailerbmh/composer.json",
                "modules/pathauto/composer.json",
                "modules/payment/composer.json",
                "modules/plugin/composer.json",
                "modules/plugin_selector/composer.json",
                "modules/search_api_solr/composer.json",
                "modules/swiftmailer/composer.json"
            ],
            "recurse": false,
            "replace": false,
            "merge-extra": false
        }
    },
    "autoload": {
        "psr-4": {
            "Drupal\\Core\\Composer\\": "core/lib/Drupal/Core/Composer",
            "Drupal\\composer_manager\\Composer\\": "modules/composer_manager/src/Composer"
        }
    },
    "scripts": {
        "pre-autoload-dump": "Drupal\\Core\\Composer\\Composer::preAutoloadDump",
        "post-autoload-dump": "Drupal\\Core\\Composer\\Composer::ensureHtaccess",
        "post-package-install": "Drupal\\Core\\Composer\\Composer::vendorTestCodeCleanup",
        "post-package-update": "Drupal\\Core\\Composer\\Composer::vendorTestCodeCleanup",
        "drupal-rebuild": "Drupal\\composer_manager\\Composer\\Command::rebuild",
        "drupal-update": "Drupal\\composer_manager\\Composer\\Command::update"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        }
    ]
}